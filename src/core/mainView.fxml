<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" styleClass="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
  <!--
    <fx:script>
