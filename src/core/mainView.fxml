    -->
  <!-- 1. Row-->
  <Label id="grid-header" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Zeit" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0" />
  <!-- 2. Row-->
  <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
  <Label id="employerName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
  <Label GridPane.columnIndex="2" GridPane.rowIndex="1" />
  <Label GridPane.columnIndex="3" GridPane.rowIndex="1" />
  <!-- 3. Row-->
  <Label text="Datum" GridPane.columnIndex="0" GridPane.rowIndex="2" />
  <Label GridPane.columnIndex="1" GridPane.rowIndex="2" />
  <Label GridPane.columnIndex="2" GridPane.rowIndex="2" />
  <Label GridPane.columnIndex="3" GridPane.rowIndex="2" />
  <!-- 4. Row-->
  <Button alignment="BOTTOM_LEFT" text="Projektauswahl" GridPane.columnIndex="0" GridPane.rowIndex="3" />
  <Label GridPane.columnIndex="1" GridPane.rowIndex="3" />
  <Label text="Vertrag" GridPane.columnIndex="2" GridPane.rowIndex="3" />
  <Label GridPane.columnIndex="3" GridPane.rowIndex="3" />
  <!-- 5. Row-->
  <Label text="Kunde" GridPane.columnIndex="0" GridPane.rowIndex="4" />
  <Label GridPane.columnIndex="1" GridPane.rowIndex="4" />
  <Label text="Auftrag" GridPane.columnIndex="2" GridPane.rowIndex="4" />
  <Label GridPane.columnIndex="3" GridPane.rowIndex="4" />
  <!-- 6. Row-->
  <Label text="Tätigkeitsklasse" GridPane.columnIndex="0" GridPane.rowIndex="5" />
  <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="5" />
  <Label text="Tätigkeit" GridPane.columnIndex="2" GridPane.rowIndex="5" />
  <ComboBox GridPane.columnIndex="3" GridPane.rowIndex="5" />
  <!-- 7. Row-->
  <Label text="verwendete Zeit" GridPane.columnIndex="0" GridPane.rowIndex="6" />
  <TextField GridPane.columnIndex="1" GridPane.rowIndex="6" />
  <Label text="in Abrechnung aufnehmen" GridPane.columnIndex="2" GridPane.rowIndex="6" />
  <Label GridPane.columnIndex="3" GridPane.rowIndex="6" />
  <!-- 8. Row-->
  <Label text="Bemerkung" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.rowSpan="1" />
  <TextField GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="7" GridPane.rowSpan="1" />
  <!-- 9. Row-->
  <HBox spacing="10.0" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="8">
    <Button onAction="#handleSaveBtnAction" text="Abschließen" />
    <Button onAction="#handleProjectBtnAction" text="gehe zu Projekt" />
    <Button alignment="BOTTOM_RIGHT" onAction="#handleHelpBtnAction" text="Hilfe" />
    <Button alignment="BOTTOM_RIGHT" onAction="#handleCancelBtnAction" text="Abbrechen" />
  </HBox>
  <!-- 10. Row-->
  <Text fx:id="actionTargetBtn" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="9" />
